{
    "name": "cloud-waap-destination-map",
    "component_template": {
        "template": {
            "mappings": {
                "properties": {
                    "destination": {
                        "type": "object",
                        "properties": {
                            "port": {
                                "type": "long"
                            },
                            "domain": {
                                "ignore_above": 1024,
                                "type": "keyword"
                            },
                            "ip": {
                                "type": "ip"
                            }
                        }
                    }
                }
            }
        }
    }
}