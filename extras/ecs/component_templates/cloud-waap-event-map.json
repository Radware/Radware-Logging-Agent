{
    "name": "cloud-waap-event-map",
    "component_template": {
        "template": {
            "mappings": {
                "properties": {
                    "event": {
                        "type": "object",
                        "properties": {
                            "duration": {
                                "type": "long"
                            },
                            "severity": {
                                "type": "long"
                            },
                            "reason": {
                                "ignore_above": 1024,
                                "type": "keyword"
                            },
                            "created": {
                                "type": "date"
                            },
                            "kind": {
                                "ignore_above": 1024,
                                "type": "keyword"
                            },
                            "start": {
                                "type": "date"
                            },
                            "action": {
                                "ignore_above": 1024,
                                "type": "keyword"
                            },
                            "end": {
                                "type": "date"
                            },
                            "id": {
                                "ignore_above": 1024,
                                "type": "keyword"
                            },
                            "category": {
                                "ignore_above": 1024,
                                "type": "keyword"
                            },
                            "type": {
                                "ignore_above": 1024,
                                "type": "keyword"
                            },
                            "dataset": {
                                "ignore_above": 1024,
                                "type": "keyword"
                            }
                        }
                    }
                }
            }
        }
    }
}