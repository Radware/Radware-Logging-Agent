{
    "name": "cloud-waap-source-map",
    "component_template": {
        "template": {
            "mappings": {
                "properties": {
                    "source": {
                        "type": "object",
                        "properties": {
                            "geo": {
                                "type": "object",
                                "properties": {
                                    "country_iso_code": {
                                        "ignore_above": 1024,
                                        "type": "keyword"
                                    }
                                }
                            },
                            "port": {
                                "type": "long"
                            },
                            "ip": {
                                "type": "ip"
                            }
                        }
                    }
                }
            }
        }
    }
}